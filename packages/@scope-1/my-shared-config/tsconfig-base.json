{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "pretty": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "isolatedModules": true,
    "strict": true,

    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
